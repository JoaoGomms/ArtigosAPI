<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Artigos</h1>
        </div>
        <div class="card-body">

           <ul id="articles-list" class="list-group">

                {{#each articles}}
                <li  class="list-group-item d-flex justify-content-between">
                    {{this.data.title}}
                    {{this.data.subtitle}}
                    {{this.data.conteudo}}
                    <a href="/delete-article/{{@key}}" class="btn btn-danger">
                        Excluir
                    </a>

                </li>

                {{/each}}



            </ul>

        </div>
        <div class="card-footer">


            <form method="post" enctype="multipart/form-data" action="/new-article">
                <div class="form-group">
                    <div class="form-group">
                        <input type="text" name="content" placeholder="Conteudo" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="subtitle" placeholder="Subtitulo" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Titulo do Artigo" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="file" name="file">
                    </div>


                </div>

                <input type="submit" value="Submit">
            </form>



        </div>
    </div>


</div>