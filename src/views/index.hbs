<div class="modal fade" id="myForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Cadastre o seu artigo</h4>
            </div>
            <div class="modal-body">
                <form method="post" enctype="multipart/form-data" action="/new-article">
                    <div class="form-group">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="Título" class="form-control"
                                   autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="subtitle" placeholder="Subtítulo" class="form-control" autofocus>
                        </div>
                        <div class="input-group" style="margin-bottom: 2%">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Conteúdo</span>
                            </div>
                            <textarea class="form-control"  type="text" name="content" aria-label="With textarea"></textarea>
                        </div>


                        <div class="custom-file">
                            <input type="file" class="custom-file-input" name="file">
                            <label class="custom-file-label">Escolha um arquivo .png</label>
                        </div>



                    </div>

                    <input class="btn btn-primary mb-2" type="submit" value="Cadastrar Artigo">
                </form>
            </div>
        </div>
    </div>
</div>


<div class="col">

    {{#if articles}}
    <div class="row row-cols-1 row-cols-md-3">

        {{#each articles}}
            <div class="col mb-4">
                <div class="card">
                    <img src="{{this.data.url}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h4 id="title" class=" text-center card-title">{{this.data.title}}</h4>
                        <h6 id="subtitle" class="text-center" >{{this.data.subtitle}}</h6>
                        <p id="content" class="text-justify card-text">{{this.data.conteudo}}</p>
                        <a href="/delete-article/{{@key}}" class="btn btn-danger">
                            Excluir
                        </a>
                    </div>
                </div>
            </div>

        {{/each}}

        <div>
        </div>
    </div>
    {{else}}
    <div class="text-center">
        <h1>Ainda não existem artigos cadastrados</h1>
    </div>
    {{/if}}



</div>
