<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Artigos</h1>
        </div>
        <div class="card-body">

           <ul id="articles-list">

                {{#each articles}}
                <li>
                    {{this.data.title}}
                    {{this.data.subtitle}}
                    {{this.data.conteudo}}
<!--                    {{this.data.url}}-->

                </li>

                {{/each}}



            </ul>

        </div>
        <div class="card-footer">
            <form action="/new-article" method="POST">
                <div class="form-group">

                </div>
                <div class="form-group">

                </div>
                <div class="form-group">

                </div>




            </form>

            <form method="post" enctype="multipart/form-data" action="/new-article">
                <input type="text" name="content" placeholder="Conteudo" class="form-control" autofocus>
                <input type="text" name="subtitle" placeholder="Subtitulo" class="form-control" autofocus>
                <input type="text" name="title" placeholder="Titulo do Artigo" class="form-control" autofocus>
                <input type="file" name="file">
                <input type="submit" value="Submit">
            </form>



        </div>
    </div>


</div>